extends ../layouts/main.pug 


include ../mixins/events


block content
    
        .progress#progresBar(style="height:150px")
            .progress-bar.progress-bar-striped.progress-bar-animated.bg-dark(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;") 
                p.h1 Loading....
        
        .row.d-none#row
            if events !== null
                each event in events
                    .col-lg-4.col-md-6.my-3
                        +createList(event)
            else 
                .text-center.text-light.h1 No Documents
            