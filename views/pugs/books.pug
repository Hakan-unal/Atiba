block content
    .row.mt-5
        .col-4
            input.w-100.h-100#searchInput(type="text" placeholder="Search on google")
        .col-2
            input.btn.btn-outline-light.btn-lg#searchButton(type="button" value="Search")
        
            
    hr.mt-2.border-secondary(style="border: 3px solid black; border-radius:10px")
    .progress#progresBar.h-100.d-none.bg-dark
        .progress-bar.progress-bar-striped.progress-bar-animated.bg-dark.rounded-pill(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;") 
